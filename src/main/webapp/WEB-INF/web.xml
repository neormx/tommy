<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>tommy</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <error-page>
        <error-code>403</error-code>
        <location>/pages/system/forbidden.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/system/missing.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/system/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>greeting-shadow</servlet-name>
        <servlet-class>mx.com.hexabytes.rest.GreetingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>greeting-shadow</servlet-name>
        <url-pattern>/shadow.do</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <resource-env-ref>
        <resource-env-ref-name>BeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
    </resource-env-ref>
</web-app>
